
red = #b02626
black = #333

monster-dice
    cursor: pointer
    height: 10vw
    width: @height
    perspective-origin: 50% (@height/2)
    perspective: @height * 4
    display: inline-block;

    .&
        &--front
            .monster-dice__wrap
                transform: rotateX(-360deg) rotateY(360deg)

        &--right
            .monster-dice__wrap
                transform: rotateX(-360deg) rotateY(270deg)

        &--back
            .monster-dice__wrap
                transform: rotateX(-180deg) rotateY(360deg) rotate(180deg)

        &--top
            .monster-dice__wrap
                transform: rotateX(-630deg) rotateY(360deg) rotate(180deg)

        &--bottom
            .monster-dice__wrap
                transform: rotateX(-270deg) rotateY(360deg)

        &--left
            .monster-dice__wrap
                transform: rotateX(-360deg) rotateY(90deg)

        &--fake-roll
            for num in (0..5)
                &-{num}
                    .monster-dice__wrap
                        transform: rotatex(random(-630,-360)) rotateY(random(90,360)) rotate(random(0,180))
                        transition-duration: 1s

        &__wrap
            width: @height
            height: @height
            position: relative
            transform-style: preserve-3d
            transform: rotateX(0) rotateY(0)
            margin: 0 auto
            transition-duration: 2s

        &__side
            position: absolute
            width: @height
            height: @height
            box-shadow: inset 0px 10px (@height/2) darken(red, 20);
            background: red
            color: white
            display: flex
            align-items: center
            justify-content: center
            font-size: (@height/2)
            overflow: hidden

            &--back
                transform: translateZ(-@height/2) rotateY(180deg)

            &--right
                transform: rotateY(-270deg) translateX(@height/2)
                transform-origin:  right top

            &--left
                transform: rotateY(270deg) translateX(-@height/2)
                transform-origin:  left center

            &--top
                transform: rotateX(-90deg) translateY(-@height/2)
                transform-origin: center top

            &--bottom
                transform: rotateX(-90deg) translateY(@height/2)
                transform-origin: center bottom

            &--front
                transform: translateZ(@height/2)
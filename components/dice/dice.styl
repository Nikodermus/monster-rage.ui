*
    box-sizing: border-box
    margin: 0
    padding: 0
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

    &, &::after, &::before
        transition: all 0.3s ease
        &:hover
        &:focus
            transition: @transition


body
    padding: 10rem

red = #b02626
black = #333

.disable-click
    pointer-events: none

@keyframes spin-around
    0%
        transform: rotateX(0) rotateY(0)
    30%
        transform: rotateX(-20) rotateY(128deg)
    45%
        transform: rotateX(-64) rotateY(211deg)
    88%
        transform: rotateX(-118) rotateY(264deg)
    92%
        transform: rotateX(-316) rotateY(319deg)
    100%
        transform: rotateX(-360deg) rotateY(360deg)

@keyframes show-front
    100%
        transform: rotateX(-360deg) rotateY(360deg) //

@keyframes show-right
    100%
        transform: rotateX(-360deg) rotateY(270deg) //

@keyframes show-back
    100%
        transform: rotateX(-180deg) rotateY(360deg) rotate(180deg) //

@keyframes show-top
    100%
        transform: rotateX(-630deg) rotateY(360deg) rotate(180deg) //

@keyframes show-bottom
    100%
        transform: rotateX(-270deg) rotateY(360deg) //

@keyframes show-left
    100%
        transform: rotateX(-360deg) rotateY(90deg) //

.cube
    cursor: pointer
    height: 500px
    perspective-origin: 50% (@height/2)
    perspective: @height * 4
    width: @height

    &__wrap
        width: @height
        height: @height
        position: relative
        transform-style: preserve-3d
        transform: rotateX(0) rotateY(0)
        margin: 0 auto

        animation: spin-around 5s infinite linear
        animation-play-state: paused

        &--front
            animation: show-front 1s 1 forwards

        &--right
            animation: show-right 1s 1 forwards

        &--back
            animation: show-back 1s 1 forwards

        &--top
            animation: show-top 1s 1 forwards

        &--bottom
            animation: show-bottom 1s 1 forwards

        &--left
            animation: show-left 1s 1 forwards



    &__side
        position: absolute
        width: @height
        height: @height
        box-shadow: inset 0px 10px (@height/2) darken(red, 20);
        background: red
        color: white
        display: flex
        align-items: center
        justify-content: center
        font-size: (@height/2)

        &--back
            transform: translateZ(-@height/2) rotateY(180deg)

        &--right
            transform: rotateY(-270deg) translateX(@height/2)
            transform-origin:  right top

        &--left
            transform: rotateY(270deg) translateX(-@height/2)
            transform-origin:  left center

        &--top
            transform: rotateX(-90deg) translateY(-@height/2)
            transform-origin: center top

        &--bottom
            transform: rotateX(-90deg) translateY(@height/2)
            transform-origin: center bottom

        &--front
            transform: translateZ(@height/2)


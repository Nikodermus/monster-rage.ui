*
    box-sizing: border-box
    margin: 0
    padding: 0
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif

body
    padding: 10rem

red = #b02626
black = #333

@keyframes spin-around
    0%
        transform: rotateX(0) rotateY(0)
    30%
        transform: rotateX(-20) rotateY(128deg)
    45%
        transform: rotateX(-64) rotateY(211deg)
    88%
        transform: rotateX(-118) rotateY(264deg)
    92%
        transform: rotateX(-316) rotateY(319deg)
    100%
        transform: rotateX(-360deg) rotateY(360deg)

.cube
    height: 200px
    width: @height
    perspective: @height * 4
    perspective-origin: 50% (@height/2)

    &__wrap
        width: @height
        height: @height
        position: relative
        transform-style: preserve-3d
        transform: rotateX(0)
        margin: 0 auto
        animation: spin-around 5s infinite linear

    &__side
        position: absolute
        width: @height
        height: @height
        box-shadow: inset 0px 10px (@height/2) darken(red, 20);
        background: red
        color: white
        display: flex
        align-items: center
        justify-content: center
        font-size: (@height/2)


        &--back
            transform: translateZ(-@height/2) rotateY(180deg)

        &--right
            transform: rotateY(-270deg) translateX(@height/2)
            transform-origin:  right top

        &--left
            transform: rotateY(270deg) translateX(-@height/2)
            transform-origin:  left center

        &--top
            transform: rotateX(-90deg) translateY(-@height/2)
            transform-origin: center top

        &--bottom
            transform: rotateX(-90deg) translateY(@height/2)
            transform-origin: center bottom

        &--front
            transform: translateZ(@height/2)

